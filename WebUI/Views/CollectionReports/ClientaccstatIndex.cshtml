        <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12 col-xs-12">
            <label for="txtFromDate" class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_2"> @SystemResource.App_FromDate </label>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xl-3 col-xs-3">
                <input type="date" class="input-sm form-control  text-center" name="txtFromDate" id="txtFromDate">
            </div>
            <label for="txtToDate" class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_2 textcentr_Clientaccstat"> @SystemResource.App_ToDate  </label>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xl-3 col-xs-3">
                <input type="date" class="input-sm  form-control text-center" name="txtToDate" id="txtToDate">
            </div>
            <label class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_lep  pading_2 textcentr_Clientaccstat">@SystemResource.App_report_type</label>

            <div class="col-lg-2 col-md-2 col-sm-2 col-xl-2 col-xs-2">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xl-6 col-xs-6 p-0" style="color:green;font-weight:bold">
                    <input class="form-control col-xs-3"  type="radio" id="Rd_detail" name="details" value="1"> 
                    <label class="col-lg-9 col-md-9 col-sm-9 col-xl-9 col-xs-9 pading_lep  pading_2  ">@SystemResource.Summary</label>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xl-6 col-xs-6 p-0" style="color:#1cb3f9;font-weight:bold">
                    <input class="form-control col-xs-3" type="radio" id="Rd_sum" name="details" value="2"> 
                    <label class="col-lg-9 col-md-9 col-sm-9 col-xl-9 col-xs-9 pading_lep  pading_2  ">@SystemResource.Detailed</label>
                </div>
            </div>
            <div class="col-lg-1 hidden-md hidden-sm hidden-xs  p-0 ">
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12 col-xs-12">
            <label class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_lep  pading_2  "> @SystemResource.APP_Category  </label>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xl-3 col-xs-3">
                <select id="txt_ID_APP_Category" name="" class="form-control col-lg-12 col-md-12 col-sm-12 col-xl-12 col-xs-12  input-sm text_Display">
                    <option value="Null"> @SystemResource.choose_Cat </option>
                </select>
            </div>

