                <select  style="width:100%!important" id="ddlSalesman" name="" class="form-control input-sm text_Display">
                    <option value="Null"> @SystemResource.Choose_sales </option>
                </select>
            </div>
            <label class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_lep  pading_2 textcentr_Clientaccstat ">@SystemResource.App_Cutomer</label>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xl-3 col-xs-3">
                <select id="ddlCustomer" style="width:100%!important" name="" class="form-control input-sm text_Display w-100">
