            <div class="col-lg-3 col-md-3 col-sm-3 col-xl-3 col-xs-3">
                <select style="width:100%!important" id="txt_ID_APP_Group" name="" class="form-control input-sm text_Display">
                    <option value="Null">@SystemResource.Choose_group</option>
                </select>
            </div>
            <label class="col-lg-1 col-md-1 col-sm-1 col-xl-1 col-xs-1 pading_lep  pading_2 textcentr_Clientaccstat">@SystemResource.App_Status</label>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xl-2 col-xs-2">
