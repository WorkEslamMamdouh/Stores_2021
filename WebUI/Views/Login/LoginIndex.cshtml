<link href="~/css/background.css" rel="stylesheet" />

<input type="hidden" id="OnLogged" name="name" value="@Url.Action("OnLogged","Login")" />
<input type="hidden" id="GetAPIUrl" name="name" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceUrl"]" />

<style>
    .form-control {
        margin: 10px;
    }

    .container2 .clock {
        width: 100% !important;
    }
</style>



<div id="tblLogin" class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img alt="IMG" src="~/New_Design/Login_v1/images/img-01.png" />
            </div>

            <form class="login100-form validate-form">
                <span class="login100-form-title">
                     Login
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input id="txtUserName" class="input100" type="text" name="email" placeholder="UserName">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input id="txtUserPassword" class="input100" type="password" name="pass" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <select id="cmbLanguage" class="input100"  >
                        <option value="ar">عربي</option>
                        <option value="en">English</option>
                    </select>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input type="hidden" class="login_input2" id="txtYear" placeholder="2021">
                </div>

                <div class="container-login100-form-btn">
                    <button id="btnLogin" class="login100-form-btn">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <input type="checkbox" id="chkRemember">
                    <span class="txt1">
                        Forgot
                    </span>
                    <a class="txt2" href="#">
                        Username / Password?
                    </a>
                </div>
 
            </form>
        </div>
    </div>
</div>


<div id="tblCompany" class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img alt="IMG" src="~/New_Design/Login_v1/images/img-01.png" />
            </div>

            <form class="login100-form validate-form">
                <span class="login100-form-title">
                    Company and Branch
                </span>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <select id="cmbCompany" class="input100">
                    </select>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <select id="cmbBranch" class="input100">
                    </select>
                </div>



                <div class="container-login100-form-btn">
                    <button id="btnOk" class="login100-form-btn">
                        Enter
                    </button>

                </div>

                <div class="container-login100-form-btn">
                    <button id="btnBack" class="login100-form-btn" style="background-color: cadetblue;">
                        back
                    </button>

                </div>

                <div class="text-center p-t-12">
                   
                </div>


            </form>
        </div>
    </div>
</div>


