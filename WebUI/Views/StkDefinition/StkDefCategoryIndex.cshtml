@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Men_StkDefCategory;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    .inner tr td {
        border-top: none !important;
    }

    .btn-info {
        color: #fff;
        background-color: #5bc0de;
        border-color: #46b8da;
        padding: 10px 16px;
        font-size: 18px;
        line-height: 1.3333333;
        border-radius: 6px;
    }

    .fontitm3 {
        float: right;
        margin: 5px -15px 0px 0px !important;
        font-size: 25px !important;
    }

    .style_pading {
        padding-left: 1px;
        padding-right: 1px;
    }

    .table_11 tr td:nth-child(3) {
        width: 200px;
    }

    .table_11 tr th:nth-child(12), .table_11 tr td:nth-child(12) {
        width: 120px;
    }

    .table_11 {
        margin-bottom: 0px;
    }

    .auto-style1 {
        background-color: #F5F5F5;
    }

    .display_none {
        display: none !important;
    }

    #btnAddDetails {
        font-size: 40px;
    }

        #btnAddDetails:hover {
            color: #24b414;
        }

    .glyphicon-remove-sign:hover {
        color: red
    }

    .minus_btn {
    }

    .font_codenumber {
        font-size: 19px;
        font-weight: bold;
    }
</style>
<div class="panel panel-default borderred">
    @*<div class="panel-heading panel_me">*@
        <i class="glyphicon glyphicon-pencil icon_panel"></i><label class="span_item">@SystemResource.Men_StkDefCategory</label><label class="span_item"></label>
    @*</div>*@

    <div class="panel-body " id="div_ContentData">
        <div class="row">
            <div class="col-lg-12">

                <div class="col-lg-9">
                </div>
                <div class="col-lg-3">

                    <button type="button" class="btn btn-warning display_none" id="btnback">
                        <span class="glyphicon glyphicon-backward"></span> @SystemResource.App_back
                    </button>
                    <button type="button" class="btn btn-primary" id="btnedite">
                        <span class="glyphicon glyphicon-edit"></span> @SystemResource.App_Update
                    </button>

                    <button id="btnsave" type="button" class="btn btn-success display_none">
                        @SystemResource.App_save  <span class="glyphicon glyphicon-floppy-saved"></span>
                    </button>

                </div>
            </div>
        </div>
        <div id=" " class="col-lg-12 font_codenumber">
            <div class="col-lg-1">
                <span class="">@SystemResource.App_Code</span>
            </div>
            <div class="col-lg-3">
                <span class="">@SystemResource.p_itemA</span>

            </div>

            <div class="col-lg-3">
                <span class="">@SystemResource.p_itemE</span>
            </div>
            <div class="col-lg-2">
                <span class="">@SystemResource.App_TaxType</span>
            </div>
            <div class="col-lg-2">
                <span class="">مجموعات</span>
            </div>
        </div>
             <div class="col-lg-12">
                <div class="col-lg-12 p-0" id="div_Data">
                </div>
                <span id="btnAddDetails" class="glyphicon glyphicon-plus-sign  display_none"></span>
            </div>
     </div>
</div>

<script src="~/ClientApp/StkDefinition/StkDefCategory.js"></script>